{
    "name": "fecaps/email_microservice",
    "type": "project",
    "description": "Email Microservice",
    "keywords": [
        "framework",
        "laravel"
    ],
    "license": "MIT",
    "require": {
        "php": "^7.2",
        "bschmitt/laravel-amqp": "^2.0",
        "fideloper/proxy": "^4.0",
        "laravel/framework": "^6.2",
        "laravel/tinker": "^1.0",
        "mailjet/mailjet-apiv3-php": "^1.4"
    },
    "require-dev": {
        "brainmaestro/composer-git-hooks": "^2.8",
        "facade/ignition": "^1.4",
        "friendsofphp/php-cs-fixer": "^2.16",
        "fzaninotto/faker": "^1.4",
        "mockery/mockery": "^1.0",
        "nunomaduro/collision": "^3.0",
        "nunomaduro/larastan": "^0.4.3",
        "object-calisthenics/phpcs-calisthenics-rules": "^3.5",
        "phpmd/phpmd": "^2.7",
        "phpunit/phpunit": "^8.0",
        "sebastian/phpcpd": "^4.1",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        },
        "hooks": {
            "pre-commit": [
                "composer run-script codeStyle",
                "composer run-script copyPasteDetector",
                "composer run-script messDetector",
                "composer run-script objectCalisthenics",
                "composer run-script errorsAnalyse"
            ],
            "pre-push": [
                "composer run-script codeStyle",
                "composer run-script copyPasteDetector",
                "composer run-script messDetector",
                "composer run-script objectCalisthenics",
                "composer run-script errorsAnalyse",
                "composer run-script tests",
                "composer run-script showCoverage"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "classmap": [
            "database/seeds",
            "database/factories"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "codeStyle": "docker exec email_microservice ./vendor/bin/phpcs -sw --standard=PSR2 app/",
        "copyPasteDetector": "docker exec email_microservice vendor/bin/phpcpd --verbose app/",
        "messDetector": "docker exec email_microservice vendor/bin/phpmd app/ text codesize",
        "objectCalisthenics": "docker exec email_microservice vendor/bin/phpcs app/ -sp --standard=vendor/object-calisthenics/phpcs-calisthenics-rules/src/ObjectCalisthenics/ruleset.xml",
        "errorsAnalyse": "docker exec email_microservice php artisan code:analyse",
        "fixStyle": "docker exec email_microservice php ./vendor/bin/php-cs-fixer fix ./app",
        "tests": "docker exec email_microservice ./vendor/bin/phpunit",
        "showCoverage": "docker exec email_microservice cat report/txt-report"
    }
}
